{
    "name": "MCP SRG Mapper",
    "version": "0.1.2",
    "manifest_version": 2,
    "description": "Applies MCP mappings to SRG named code snippets on github repos and pastebins.",
    "homepage_url": "https://github.com/bspkrs/MCP-SRG-Mapper",
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "http://files.minecraftforge.net/maven/de/oceanlabs/mcp/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*/MinecraftForge/*",
                "https://github.com/*/FML/*",
                "https://gist.github.com/*",
                "https://pastebin.com/*",
                "http://pastebin.com/*"
            ],
            "css": [
                "css/toastr.min.css"
            ],
            "js": [
                "js/jquery-2.1.1.min.js",
                "js/toastr.min.js",
                "src/inject.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/jszip.min.js",
            "src/background.js"
        ],
        "persistent": false
    }
}
